
<header class="p-3 bg-dark text-white">
      <div class="d-flex flex-wrap align-items-center justify-content-between">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
            <h1>Task Manager</h1>
        </a>
        <div class="text-end d-flex flex-direction-row align-items-center gap-3">
            <% if user_signed_in? %>
                <h5>Welcome, <%=current_user.email%></h5>
                <%= button_to "Sign Out",
                destroy_user_session_path, 
                class:"btn btn-outline-warning me-2", method: :delete%>
            <% elsif controller_name != "sessions" && controller_name != "registrations" %>
                <%= link_to "Sign In", new_user_session_path, class:"btn btn-outline-light me-2"%>
                <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-warning" %>
            <% end %>
        </div>
      </div>
  </header>